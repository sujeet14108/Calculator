<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sujeet.calculator.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/nine"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="210dp"
        android:clickable="true"
        android:contextClickable="false"
        android:onClick="onclick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/eight"
        android:layout_alignTop="@+id/nine"
        android:layout_toRightOf="@+id/nine"
        android:layout_toEndOf="@+id/nine"
        android:clickable="true"
        android:onClick="onclick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/seven"
        android:layout_alignTop="@+id/eight"
        android:layout_toRightOf="@+id/eight"
        android:layout_toEndOf="@+id/eight"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plus"
        android:layout_alignTop="@+id/seven"
        android:layout_toRightOf="@+id/seven"
        android:layout_toEndOf="@+id/seven"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/six"
        android:layout_below="@+id/nine"
        android:layout_toLeftOf="@+id/eight"
        android:layout_toStartOf="@+id/eight"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/five"
        android:layout_below="@+id/nine"
        android:layout_toLeftOf="@+id/seven"
        android:layout_toStartOf="@+id/seven"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/four"
        android:layout_alignTop="@+id/five"
        android:layout_toRightOf="@+id/five"
        android:layout_toEndOf="@+id/five"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minus"
        android:layout_alignTop="@+id/four"
        android:layout_toRightOf="@+id/four"
        android:layout_toEndOf="@+id/four"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/div"
        android:layout_below="@+id/one"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/three"
        android:layout_below="@+id/six"
        android:layout_toLeftOf="@+id/five"
        android:layout_toStartOf="@+id/five"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/two"
        android:layout_below="@+id/five"
        android:layout_alignLeft="@+id/five"
        android:layout_alignStart="@+id/five"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/one"
        android:layout_below="@+id/four"
        android:layout_toLeftOf="@+id/minus"
        android:layout_toStartOf="@+id/minus"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/multi"
        android:layout_below="@+id/four"
        android:layout_toRightOf="@+id/four"
        android:layout_toEndOf="@+id/four"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/point"
        android:layout_alignTop="@+id/div"
        android:layout_toLeftOf="@+id/two"
        android:layout_toStartOf="@+id/two"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/zero"
        android:layout_below="@+id/three"
        android:layout_toLeftOf="@+id/one"
        android:layout_toStartOf="@+id/one"
        android:clickable="true"
        android:onClick="onclick"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="="
        android:id="@+id/eq"
        android:layout_alignTop="@+id/div"
        android:layout_toRightOf="@+id/zero"
        android:layout_toEndOf="@+id/zero"
        android:clickable="true"
        android:onClick="onclick"
        android:layout_alignBottom="@+id/per" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/sum"
        android:layout_above="@+id/eight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp"
        android:background="#d9d9ba" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="c"
        android:id="@+id/cancel"
        android:layout_above="@+id/eight"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/eight"
        android:layout_toStartOf="@+id/eight"
        android:clickable="true"
        android:onClick="onclick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-/+"
        android:id="@+id/mipl"
        android:layout_alignTop="@+id/cancel"
        android:layout_toRightOf="@+id/cancel"
        android:layout_alignRight="@+id/eight"
        android:layout_alignEnd="@+id/eight"
        android:clickable="true"
        android:onClick="onclick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="^"
        android:id="@+id/power"
        android:layout_above="@+id/eight"
        android:layout_toRightOf="@+id/eight"
        android:layout_alignRight="@+id/seven"
        android:layout_alignEnd="@+id/seven"
        android:onClick="onclick"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Del"
        android:id="@+id/delete"
        android:layout_above="@+id/seven"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/plus"
        android:layout_alignStart="@+id/plus"
        android:onClick="onclick"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:id="@+id/br1"
        android:layout_below="@+id/point"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/zero"
        android:layout_toStartOf="@+id/zero"
        android:onClick="onclick"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="%"
        android:id="@+id/per"
        android:layout_alignBottom="@+id/br1"
        android:layout_alignLeft="@+id/div"
        android:layout_alignStart="@+id/div"
        android:clickable="true"
        android:onClick="onclick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=")"
        android:id="@+id/br2"
        android:layout_alignBottom="@+id/br1"
        android:layout_alignRight="@+id/zero"
        android:layout_alignEnd="@+id/zero"
        android:layout_toRightOf="@+id/br1"
        android:layout_toEndOf="@+id/br1"
        android:onClick="onclick"
        android:clickable="true" />

</RelativeLayout>
